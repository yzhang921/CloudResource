[alias]
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %C(blue)%cn[%ce]%Creset' --abbrev-commit --date=relative
	st = status
	co = checkout
	ci = commit
	br = branch

[core]
  pager = less
  autocrlf = false
  safecrlf = false
  whitespace = cr-at-eol
  filemode = false

[push]
  default = simple

[merge]
  renormalize = true